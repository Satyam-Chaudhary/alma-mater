generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model CollegeDetails {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  collegeDescription String
  collegeId          String   @db.ObjectId
  collegeName        String   @unique
  numberOfAlumni     Int
  collegeImageLink   String?
  //Events             Events[]
}

model CollegesName {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  established Int
  name        String
}

model Events {
  id                String         @id @default(auto()) @map("_id") @db.ObjectId
  nameEvent         String
  smallDescription  String
  properDescription String
  websiteLink       String?
 // collegeId         String         @db.ObjectId
  //college           CollegeDetails @relation(fields: [collegeId], references: [collegeName])
  collegeName       String?
}

model Research {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  nameResearch      String
  smallDescription  String
  properDescription String
  membersEmail      String
  websiteLink       String?
  internshipVcancy  Boolean
  collegeName       String?
}

model Startup {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  nameStartup       String
  smallDescription  String
  properDescription String
  membersEmail      String
  websiteLink       String?
  funded            Boolean
  collegeName       String?
}

model jobListing {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  namePosition      String
  nameCompany       String
  smallDescription  String
  properDescription String
  websiteLink       String?
  open              Boolean?
  collegeName       String?
  PostedBy          String?
}
